function opav-preview-op-item() {
    local op_item;
    local op_vault;
    local op_item_uuid=$2;

    op_item=$(op get item "$op_item_uuid");
    op_vault=$(jq -r '.vaultUuid' <<< "$op_item" | op get vault - | jq '.name')

    echo "[Item] %F{cyan}$1";
    echo "[Vault] %F${op_vault:-UNKNOWN}";
}
